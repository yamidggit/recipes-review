
    <div class="row center-block">
        <div class="col-md-4">
            <h3><%= @recipe.title %></h3>
            <%=image_tag @recipe.recipe_img.url, width: 350, height: 400, class: "img-rounded ", alt: 'a recipe'%>
            <div class="row center-block">
                <div class="col-md-3">
                    <p><%= link_to("Back", recipes_path)%></p>
                </div>
                <% if user_signed_in?%>
                    <div class="col-md-4">
                       <p><%=link_to("Edit Recipe",edit_recipe_path(@recipe))%></p>
                    </div>
                    <div class="col-md-5">
                        <p><%=link_to("Delete Recipe", recipe_path(@recipe), method: :delete)%></p>
                    </div>
                <%end%>
            </div>
        </div>
           
        <div class="col-md-8 description">
            <h3>Categories:</h3> 
            <p><%= @recipe.categories.map(&:name).join(', ') %></p>
            <hr>
            <h3><%= @recipe.publisher %></h3>
            <hr>
            <p><%= @recipe.description %></p>
        </div>
    </div>
       

    <div class="row center-block">
        
        <h3>Reviews</h3>
        
        <% @recipe.reviews.each do |review| %>
            <p>Rating: <%= review.rating %> stars</p>
            <p><%= review.comment %></p>
            <% if (user_signed_in?)&& (review.user!=nil) && (review.user.id==current_user.id)%>
                <p><%=link_to("Edit review", edit_recipe_review_path(@recipe, review) )%></p>
                <p><%=link_to("Delete review", recipe_review_path(@recipe, review), method: :delete )%></p>
            <%end%>
            <hr>    
        <%end%>
        
        <% if (user_signed_in?)%>
            <p><%=link_to("Add review", new_recipe_review_path(@recipe) )%></p>
        <%end%>
        
    </div>
        
        
  
    
   